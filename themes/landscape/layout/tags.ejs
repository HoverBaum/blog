<section class="layout-wrap">
  <div class="layout-title">
    <span style="font-size: 2em;line-height: 2em;"><%= page.title %></span>
  </div>
  <div class="layout-wrap-inner tag-cloud">
    <% if(site.tags.length) { %>
      <%- tagcloud({min_font: 14, max_font: 28, color: true, start_color: 'black', end_color: 'black'}) %>
    <% } %>
  </div>
</section>